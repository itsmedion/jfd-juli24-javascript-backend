<h1>Data Seluruh karyawan PT Konoha Makmur Sentosa</h1>
<style>
    .padding-td {
        padding: 5px;
    }
</style>
<hr>
<table border="1">
    <thead>
        <tr>
            <th>Nama</th>
            <th>gender</th>
            <th>Alamat</th>
            <th>NIP</th>
            <th>Departemen</th>
            <th>Agama</th>
            <th>View</th>
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < karyawan.length; i++) {%>
            <tr>
                <td class="padding-td"><%= karyawan[i].nama%></td>
                <td class="padding-td"><%= karyawan[i].gender%></td>
                <td class="padding-td"><%= karyawan[i].alamat%></td>
                <td class="padding-td"><%= karyawan[i].nip%></td>
                <td class="padding-td"><%= karyawan[i].departemen_id%></td>
                <td class="padding-td"><%= karyawan[i].agama_id%></td>
                <td> 
                    <a href="/karyawan/detail/<%= karyawan[i].id %>">
                    <button>Lihat Detail</button></a>
                </td>
            </tr>
            <%}%>

    </tbody>
       
</table>
<%= JSON.stringify(karyawan) %>